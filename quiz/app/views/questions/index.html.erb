<p id="notice"><%= notice %></p>

<div class="container">
  <div class="panel panel-default">
    <table class="table">
      <thead>
        <tr>
          <th>Question</th>
          <th>A</th>
          <th>B</th>
          <th>C</th>
          <th>D</th>
          <th>Ans</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= question.question %></td>
            <td><%= question.one %></td>
            <td><%= question.two %></td>
            <td><%= question.three %></td>
            <td><%= question.four %></td>
            <td><%= question.answer %></td>
            <td>
              <%= link_to 'Edit', edit_question_path(question) %><br>
              <%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
