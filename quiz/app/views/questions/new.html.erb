<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

<div class = "container">

  <div class = "page-header">
    <h1>New Question</h1>
  </div>

  <%= form_for(@question) do |f| %>

    <div class="form-group">
      <%= f.label :question %>
      <%= f.text_field :question, class:'form-control', placeholder: 'question' %>
    </div>

    <div class="form-group">
      <%= f.label :one %>
      <%= f.text_field :one, class:'form-control', placeholder: 'answer' %>
    </div>

    <div class="form-group">
      <%= f.label :two %>
      <%= f.text_field :two, class:'form-control', placeholder: 'answer' %>
    </div>

    <div class="form-group">
      <%= f.label :three %>
      <%= f.text_field :three, class:'form-control', placeholder: 'answer' %>
    </div>

    <div class="form-group">
      <%= f.label :four %>
      <%= f.text_field :four, class:'form-control', placeholder: 'answer' %>
    </div>

    <div class="form-group">
      <%= f.label :answer %>
      <%= f.text_field :answer, class:'form-control', placeholder: 'One, Two, Three, Four' %>
    </div>

    <div class="form-group">
      <%= f.label :Quiz_Number %>
      <%= f.text_field :Quiz_Num, class:'form-control', placeholder: '1, 2, 3,...' %>
    </div>

    <%= f.submit %>
    <% end %>
</div>
